{
	"name": "gsaimeos/gs-saferpay",
	"description": "Saferpay payment extension for Aimeos web shops and e-commerce solutions",
	"keywords": ["aimeos", "payment", "shop", "e-commerce", "saferpay"],
	"homepage": "https://aimeos.org/",
	"type": "aimeos-extension",
	"license": "LGPL-3.0-or-later",
	"support": {
		"source": "https://github.com/gsaimeos/gs-saferpay",
		"issues": "https://github.com/gsaimeos/gs-saferpay/issues",
		"forum": "https://aimeos.org/help",
		"wiki": "https://aimeos.org/docs"
	},
	"prefer-stable": true,
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.3.3",
		"aimeos/aimeos-core": "2018.10.*",
		"composer/installers": "^1.0",
		"gilbertsoft/saferpay-json-api": "* || @dev",
		"omnipay/common": "~2.5 || ~3.0"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.16",
		"overtrue/phplint": "^1.2",
		"phpunit/phpunit": "^5.7"
	},
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test:php:cgl": [
            "php-cs-fixer --diff -v fix"
		],
        "test:php:lint": [
            "phplint"
        ],
        "test:php:unit": [
            "phpunit -c lib/saferpay/tests/phpunit.xml"
        ],
        "test": [
            "@test:php:cgl",
            "@test:php:lint",
            "@test:php:unit"
        ]
	},
	"autoload": {
		"psr-4": {
			"GsAimeos\\MShop\\": "lib/custom/src/MShop"
		},
		"classmap": [
			"lib/custom/src"
		]
	}
}
